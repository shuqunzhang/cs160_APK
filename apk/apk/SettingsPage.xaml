<Page x:Class="apk.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="1080" Title="SettingsPage" Loaded="Page_Loaded"
        xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers">

    <Canvas>
        <my:KinectColorViewer Canvas.Left="568" Canvas.Top="12" Width="480" Height="360" Name="kinectColorViewer1" Kinect="{Binding ElementName=kinectSensorChooser1, Path=Kinect}" />
        <my:KinectSensorChooser Canvas.Left="0" Canvas.Top="1000" Name="kinectSensorChooser1" Width="328" />
        <Button Canvas.Left="24" Canvas.Top="20" Content="Set Range of Motion" Height="150" Name="button1" Width="500" FontSize="42"/>
        <Button Canvas.Left="24" Canvas.Top="364" Content="Manage Taboo Words" Height="150" Name="button2" Width="500" FontSize="42" />
        <Button Canvas.Left="24" Canvas.Top="192" Content="Manage Taboo Gestures" Height="150" Name="button3" Width="500" FontSize="42" Click="button3_Click" />
        <Button Canvas.Left="24" Canvas.Top="536" Content="Return Home" Height="150" Name="button4" Width="500" FontSize="42" Click="button4_Click"/>
        <Button Canvas.Left="558" Canvas.Top="382" Content="Set Volume Level" Height="150" Name="button5" Width="500" FontSize="42" />
        <Button Canvas.Left="558" Canvas.Top="578" Content="During" Height="110" Name="button6" Width="250" FontSize="42"/>
        <Button Canvas.Left="808" Canvas.Top="578" Content="After" Height="110" Name="button7" Width="250" FontSize="42"/>
        <Label Canvas.Left="558" Canvas.Top="538" Content="When to Display Presentation Results:" Height="42" Name="label1" Width="400" FontSize="22"/>
    </Canvas>
</Page>
